    <change>
      <text locale="en">Updated ECSSProperty items with more up to date specifications</text>
    </change>
  </entry>
  <entry date="2014-12-04" category="api" action="add">
    <change>
      <text locale="en">Extended CSSMediaList API</text>
    </change>
  </entry>
